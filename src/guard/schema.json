{
  "$schema": "http://json-schema.org/schema",
  "id": "SchemanticsForGuard",
  "title": "Guard Schema",
  "type": "object",
  "properties": {
    "folder": {
      "type": "string",
      "description": "Folder name for guards",
      "default": "guards",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "guards": {
      "type": "array",
      "description": "The guard for project",
      "uniqueItems": true,
      "items": {
        "type": "string"
      },
      "x-prompt": {
        "message": "Which guards would you like to generate?",
        "type": "list",
        "multiselect": true,
        "items": ["def-lang.guard.ts", "lang-guard.guard.ts"]
      }
    },
    "path": {
      "type": "string",
      "default": "app"
    },
    "sourceDir": {
      "type": "string",
      "default": "src"
    }
  }
}
